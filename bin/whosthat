#!/usr/bin/perl
use strict;
use warnings;
use WhosThat;

my @args = @ARGV;

# Check all of the people we know
foreach my $who ( WhosThat::listwho() ) {

    # Is this who we're looking for?
    if ( # Name
        $who->{name} =~ /@args/i
        ||    #Email
        $who->{email} =~ /@args/i
      )
    {
        print <<EOW;

Name:  $who->{name}
Title: $who->{title}
Email: $who->{email}
EOW

        if ( $who->{phonetool} ) {
            print $who->{phonetool} . "\n";
        }

        print "Projects:\n";
        foreach my $p ( @{$who->{projects}} ) {
            my $proj = WhosThat->loadproject( $p );
            if ( $proj ) {
                print "\t" . $proj->{name} ."\n";
            } else {
                print "\t" . $p . "\n" unless $p =~/fixme/;
            }
        }

        print "Services or Teams:\n";
        foreach my $s ( @{$who->{services}} ) {
            my $service = WhosThat->loadservice( $s );
            last unless $service;
            print "\t" . $service->{name} ."\n";
        }

        if ( $who->{notes} ) {
            print "\nNotes:\n" . $who->{notes} . "\n\n";
        }
    }
}



